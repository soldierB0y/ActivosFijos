                <a asp-action="Edit" asp-route-id="@item.IdactivosFijos">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdactivosFijos">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdactivosFijos">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
